@page
@model MyShop.Web.Pages.Admin.Product.CreateProductModel
@{
    ViewData["Title"] = "افزودن کالا";
    Layout = "Shared/_AdminLayout";
}


<div class="x_panel">
    <div class="x_title">
        <h2>
            اطلاعات کالا

        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>

            <li>
                <a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <form method="post" enctype="multipart/form-data">
            <div class="row">

                <div class="col-md-6 col-sm-12 col-xs-12 form-group">
                    <div class="form-group has-feedback">
                        <input asp-for="Product.ProductName" type="text" class="form-control has-feedback-left" required="" placeholder="نام">
                        <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                    </div>

                    <div class="form-group has-feedback">
                        <textarea asp-for="Product.Description" type="text" class="form-control has-feedback-left" required="" placeholder="شرح "></textarea>
                        @*<textarea id="textarea" required="required" placeholder="آدرس " name="textarea" class="form-control col-md-7 col-xs-12"></textarea>*@
                        <span class="fa fa-info form-control-feedback left" aria-hidden="true"></span>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-9 col-sm-9 col-xs-12 ">
                    <a asp-page="Index" class="btn btn-primary">انصراف</a>
                    <button type="submit" class="btn btn-success">ثبت</button>
                </div>
            </div>
        </form>
    </div>
</div>
